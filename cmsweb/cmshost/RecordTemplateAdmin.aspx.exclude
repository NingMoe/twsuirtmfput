	<body MS_POSITIONING="GridLayout">
		<form id="Form1" method="post" runat="server">
			<input type="hidden" name="RECID">
			<TABLE cellSpacing="0" cellPadding="0" width="100%" border="0">
				<tr>
					<td width="4"></td>
					<td>
						<TABLE class="table_level2" style="WIDTH: 700px" cellSpacing="0" cellPadding="0" width="700"
							border="0">
							<TR>
								<TD class="header_level2" style="WIDTH: 557px" colSpan="2" height="10"><b><asp:label id="lblTitle" runat="server"></asp:label></b></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px; HEIGHT: 9px" align="right" width="127" height="9"></TD>
								<TD style="WIDTH: 573px; HEIGHT: 9px" width="573" height="9"></TD>
							</TR>
							<TR height="21">
								<TD style="WIDTH: 127px" align="right" width="127">当前资源：</TD>
								<TD style="WIDTH: 573px" width="573"><asp:label id="lblResName" runat="server" DESIGNTIMEDRAGDROP="22"></asp:label></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px; HEIGHT: 22px" align="right" width="127"><asp:linkbutton id="lbtnAddHostRes" runat="server">添加当前资源</asp:linkbutton></TD>
								<TD style="WIDTH: 573px; HEIGHT: 22px" width="573"><FONT face="宋体"><asp:dropdownlist id="ddlHostResCols" runat="server" Width="148px"></asp:dropdownlist></FONT></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px; HEIGHT: 18px" align="right" width="127"><asp:linkbutton id="lbtnAddSubRes" runat="server">添加关联子资源</asp:linkbutton></TD>
								<TD style="WIDTH: 573px; HEIGHT: 18px" width="573"><asp:dropdownlist id="ddlSubRes" runat="server" Width="148px"></asp:dropdownlist></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px" align="right" width="127"><asp:linkbutton id="lbtnAddOtherRes" runat="server">添加其它资源</asp:linkbutton></TD>
								<TD style="WIDTH: 573px" width="573"><FONT face="宋体"><asp:textbox id="txtOtherRes" runat="server" Width="148px" ReadOnly="True"></asp:textbox><asp:linkbutton id="lbtnSelRes" runat="server">选择资源</asp:linkbutton>&nbsp;<asp:dropdownlist id="ddlOtherResCols" runat="server" Width="148px"></asp:dropdownlist><asp:label id="Label1" runat="server">(添加时必须选择主资源的关联字段)</asp:label></FONT></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px; HEIGHT: 6px" align="right" width="127"></TD>
								<TD style="WIDTH: 573px; HEIGHT: 6px" width="573"><FONT face="宋体"><asp:checkbox id="chkRunFormula" runat="server" Text="复制记录时运行计算公式"></asp:checkbox></FONT></TD>
							</TR>
							<TR>
								<TD style="WIDTH: 127px; HEIGHT: 23px" align="right" width="127"></TD>
								<TD style="WIDTH: 573px; HEIGHT: 23px" width="573"></TD>
							</TR>
							<TR height="23">
